@model MStore.Models.Album
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list = new List<string>();
    list.Add("");
    list.Add("tr");
    list.Add("en");
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Store", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Album Olustur</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Album Adı", new { @class = "col-md-2 control-label" })
            <div class=" col-md-10">
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Title, "Required", new { @class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Sanatçı", new { @class = "col-md-2 control-label" })
            <div class="col-md-10 ">
                @Html.TextBoxFor(x => x.Artist.Name, new { @class = "form-control" })
                @*@Html.DropDownList("sanatcılar",new SelectList(ViewBag.artists,"ArtistID","Name"),new { @class = "form-control" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Türü", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*@Html.TextBoxFor(x => x.Genre1.Name, new { @class = "form-control" })*@
                @Html.DropDownListFor(x => x.lang,new SelectList(list),new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Tutar", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("lang", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.lang, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />

            </div>
        </div>
    </div>


}





<div>
    @Html.ActionLink("Back to List", "Index")
</div>
